@model IEnumerable<Reservation>

<h2>Reservations</h2>

<table class="table">
    <thead>
        <tr>
            <th>Car</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>User</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var reservation in Model)
        {
            <tr>
                <td>@reservation.Car.Brand</td>
                <td>@reservation.StartDate.ToShortDateString()</td>
                <td>@reservation.EndDate.ToShortDateString()</td>
                <td>@reservation.User.Email</td>
                <td>
                    <a asp-action="Details" asp-route-id="@reservation.Id" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@reservation.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@reservation.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Create New Reservation</a>
